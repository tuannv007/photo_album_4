<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_grey_800</item>
        <item name="colorPrimaryDark">@color/color_teal_700</item>
        <item name="colorAccent">@color/color_pink_200</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewChangeColor">
        <item name="android:layout_marginLeft">@dimen/dp_4</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/dp_20</item>
        <item name="android:layout_height">@dimen/dp_20</item>
    </style>

    <style name="SeekBarChangeColor">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:max">255</item>
        <item name="android:progress">128</item>
    </style>
</resources>
