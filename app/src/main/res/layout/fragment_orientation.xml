<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey_200"
    android:orientation="vertical"
    android:padding="@dimen/dp_8">

    <ImageView
        android:id="@+id/image_orientation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_flip_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_4"
                    android:background="@drawable/background_circle_border"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/ic_flip_vertical"/>

                <ImageView
                    android:id="@+id/image_flip_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_4"
                    android:background="@drawable/background_circle_border"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/ic_flip_horizontal"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_flip"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_18"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_rotate_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_4"
                    android:background="@drawable/background_circle_border"
                    android:padding="@dimen/dp_4"
                    app:srcCompat="@drawable/ic_rotate_right_white"/>

                <ImageView
                    android:id="@+id/image_rotate_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_4"
                    android:background="@drawable/background_circle_border"
                    android:padding="@dimen/dp_4"
                    app:srcCompat="@drawable/ic_rotate_left_white"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_rotate"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_18"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
